<div class="row">
    <div class="col-xs-12 col-md-6">
	<header>
	    <h1>{$product->getTitle()}</h1>
	</header>
	<section class="productDescription">
	    <div class="description descriptionBlock">
			
			{$product->getMark()}
			
			{!$product->getDescription()}
	    </div>
	    <div class="price descriptionBlock">
			<span class="withoutVat">
				{$product->getPrice()|price}
			</span>
		
			<span class="clearfix"></span>
	    </div>

	</section>

    </div><!-- /responsive-->
    <div class="col-xs-12 col-md-offset-2 col-md-4">
	<img src="{$basePath}{$product->getMainPhoto()->getPath()|thumbnail:'homepageBox'}" class="img-responsive"/>
	<div class="row productThumbnails">
	{foreach $product->getPhotos() as $photo}
		<div class="col-sm-6 col-md-4 thumbHolder">
			<div>
				<a href="{$basePath}{$photo->getPath()}" data-lightbox="photogallery" title="{$photo->getTitle()}">
					<img src="{$basePath}{$photo->getPath()|thumbnail:'system'}" class="img-responsive" />
				</a>
			</div>
		</div>
	{/foreach}
	</div>
    </div><!-- /responsive -->

</div><!-- /.row -->






